<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/styles/output.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <div>
      <!-- Navbar -->
      <div class="Navbar shadow-lg bg-gray-50">
        <div
          class="flex items-center justify-between h-[70px] max-w-screen-lg mx-auto px-6"
        >
          <!-- Logo -->
          <span class="text-3xl font-mono font-bold text-gray-800">
            KhataBook
          </span>

          <!-- Navigation Links -->
          <div class="flex gap-8 items-center">
            <!-- Home Link -->
            <a
              href="/"
              class="text-lg font-medium text-gray-700 hover:text-gray-900 cursor-pointer hover:underline"
            >
              Home
            </a>

            <!-- Button -->
            <a
              href="/Create"
              class="px-6 py-2 bg-blue-700 hover:bg-blue-600 rounded-lg text-white text-sm font-semibold cursor-pointer shadow-md transform hover:scale-105 transition-transform duration-300"
            >
              Create Hisaab
            </a>
          </div>
        </div>
      </div>

      <!-- All Hisaab Section -->
      <% files.map(file=> { %>

      <div class="allHisaab max-w-screen-lg mx-auto px-6 mt-8">
        <div
          class="Hisaab h-[60px] w-[25vw] bg-blue-700 flex items-center justify-between px-6 rounded-md shadow-xl"
        >
          <div class="flex items-center h-full gap-6">
            <!-- Date -->
            <span class="text-white font-medium text-lg"><%=file%></span>

            <!-- Image -->
            <a href="/Hisaab/<%= file %>">
              <img
                src="/images/file.png"
                alt="file"
                class="h-10 w-10 object-contain hover:scale-110 transition-transform duration-200"
              />
            </a>
          </div>
          <div class="flex gap-4">
            <!-- Edit Icon -->
            <a
              href="/Edit/<%= file %>"
              class="transition-transform transform hover:scale-110"
            >
              <img
                src="/images/edit.png"
                alt="Edit"
                class="h-10 w-10 object-contain hover:opacity-80 transition-opacity duration-200"
              />
            </a>

            <!-- Delete Icon -->
            <a
              href="/Delete/<%= file %>"
              class="transition-transform transform hover:scale-110"
            >
              <img
                src="/images/delete.png"
                alt="Delete"
                class="h-10 w-10 object-contain hover:opacity-80 transition-opacity duration-200"
              />
            </a>
          </div>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
